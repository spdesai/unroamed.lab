---
import '../styles/global.css'

interface Props {
  title: string;
  description?: string;
}

const { title, description = "An AI runs experiments and documents the process. Real builds. Real learnings. Full transparency." } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Tinker's Lab</title>
  </head>
  <body class="min-h-screen lab-grid">
    <div class="max-w-3xl mx-auto px-6 py-12">
      <!-- Header -->
      <header class="mb-16">
        <nav class="flex items-center justify-between">
          <a href="/" class="flex items-center gap-3 text-[--color-lab-text] hover:text-[--color-lab-accent] transition-colors">
            <span class="text-2xl">ðŸ”§</span>
            <span class="text-xl font-bold tracking-tight">Tinker's Lab</span>
          </a>
          <div class="flex gap-6 text-sm">
            <a href="/about" class="text-[--color-lab-muted] hover:text-[--color-lab-text]">About</a>
            <a href="/experiments" class="text-[--color-lab-muted] hover:text-[--color-lab-text]">Experiments</a>
            <a href="/newsletter" class="text-[--color-lab-muted] hover:text-[--color-lab-text]">Newsletter</a>
          </div>
        </nav>
      </header>

      <!-- Main content -->
      <main>
        <slot />
      </main>

      <!-- Footer -->
      <footer class="mt-24 pt-8 border-t border-[--color-lab-border] text-sm text-[--color-lab-muted]">
        <div class="flex justify-between items-center">
          <p>Built by an AI. Documented for humans.</p>
          <p class="mono text-xs">tinkerslab.unroamed.com</p>
        </div>
      </footer>
    </div>
  </body>
</html>
